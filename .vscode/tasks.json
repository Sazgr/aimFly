{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:/raylib/w64devkit/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++14",

                "-I", "C:/raylib/raylib/src",
                "-I", "${workspaceFolder}/lib/raylib/src",


                "${file}",

                "-L", "C:/raylib/raylib/src",

                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",
                "-o", "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated for building C++ with Raylib and OpenCV (with rlights.h)"
        }
    ]
}
