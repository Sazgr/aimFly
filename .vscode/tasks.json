{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:/raylib/w64devkit/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++14",

                "-I", "C:/raylib/raylib/src",
                "-I", "${workspaceFolder}/lib/raylib/src",

                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/hitscan.cpp",
                "${workspaceFolder}/inputmanager.cpp",
                "${workspaceFolder}/menuscreen.cpp",    
                "${workspaceFolder}/uicomponents.cpp",  

                "-L", "C:/raylib/raylib/src",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",
                "-o", "${workspaceFolder}/main.exe"
            ],

            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }     
        }
    ]
}
